<!DOCTYPE html>

<title>Register</title>

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
      
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.rue) }}
        {{ form_row(registrationForm.code_postal) }}
        
        {#{{ form_row(registrationForm.role) }}#}
        {{ form_row(registrationForm.agreeTerms) }}
        {{ form_row(registrationForm.save,{label:'creer utilisateur'}) }}
        



       {# <button type="submit" class="btn">Register</button>#}
    {{ form_end(registrationForm) }}
{% endblock %}
